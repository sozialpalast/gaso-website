<!-- baseTemplate.hbs -->
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" ref="{{{stylesheetLink}}}" />
        <title>{{title}}</title>
    </head>
    <body>
        <div id="mainLogo" class="mainLogo"><img src="{{{mainLogoLink}}}" /></div>
        <div class="mainMenu">
            <ul class="mainMenu mainMenuList">
                {{#each mainMenu}}
                <li class="mainMenuItem"><a class="mainMenuItem" href="{{{link}}}">{{text}}</a></li>
                {{/each}}
            </ul>
            
            {{translation.language}}:
            <ul class="systemLanguages systemLanguageList">
                {{#each systemTranslations}}
                <li class="systemLanguageItem"><a class="systemLanguageItem" href="/{{this.translationLang}}/index.html">{{this.translationLangNameEnglish}}</a></li>
                {{/each}}
            </ul>
        </div>
        <div class="content">
            {{> (lookup . "template")}}
        </div>
    </body>
</html>