<form method="POST" action="/backend/createStaticPage">
<div class="row">
    <div class="col-3">
        <div class="row">
            
        <div class="col">
        <div class="container">
            <h2>{{#if edit}}{{translation.editStaticPageHeader}}{{/if}}
                {{#unless edit}}{{translation.createStaticPageHeader}}{{/unless}}</h2><br>
            <label for="language" class="form-label">{{translation.languageShortcode}}</label>
            <input type="text" name="language" class="form-control"
                value="{{#if edit}}{{edit.language}}{{/if}}{{#unless edit}}{{translation.translationLang}}{{/unless}}" /><br>
            
            
            <input type="checkbox" name="visible" input="form-check-input" {{#if edit.visible}}checked{{/if}} value="true" /> 
            <label for="visible" class="form-check-label">{{translation.staticPageIsVisible}}</label><br>
            {{#if edit}}<input type="hidden" name="edit" value="true">
            <input type="hidden" name="id" value="{{edit.id}}" />{{/if}}
            <input type="submit" class="btn btn-success" value="{{translation.createStaticPageButton}}" />
        </div>
        </div>
        <div class="col">
        <div class="container">
            <h3>{{translation.categories}}:</h3><br>
            
                {{#each categories}}
                
                    <input type="checkbox" name="_cat{{this.id}}" value="{{this.id}}" class="form-check-input" {{#if this.checked}}checked{{/if}} />&nbsp;
                    <label for="_cat{{this.id}}" class="form-check-label">{{this.title}}</label><br>
                
                {{/each}}
            
        </div>
        </div>
        </div>
    </div>
    <div class="col-9">
        <div class="container">
            {{#if existed}} <div class="error">{{translation.titleExistedError}}</div>{{/if}}

            <input type="text" name="title" class="form-control" value="{{edit.title}}" placeholder="{{translation.staticPageTitle}}"><br>
            <textarea name="content">{{edit.content}}</textarea>
        </div>
    </div>
</div>
</form>


